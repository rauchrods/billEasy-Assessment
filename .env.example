# Server
PORT=3000
NODE_ENV=development

# Database (Neon PostgreSQL)
DATABASE_URL=postgres://user:password@your-neon-instance.neon.tech/database

# JWT
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=12h

# Redis (for BullMQ) - Note: Requires Redis v5.0.0 or higher
# Redis (for BullMQ)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# File Upload
MAX_FILE_SIZE=5242880  # 5MB in bytes